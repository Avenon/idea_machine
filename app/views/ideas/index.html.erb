<div class="tags-cloud glassy-bg">
  <h4>Tags Cloud</h4>
  <% tag_cloud Tag.counts.group("tags.name"), %w{css1 css2 css3 css4} do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<div class="row mt pt">
  <div class="large-5 columns">
    <div class="top-pad glassy-bg">
      <%= render partial: "ideas/new" %>
    </div>
  </div>
  <div class= "large-7 columns" id="ideas">
    <%= render partial: @ideas.reverse %>
  </div>
</div>
